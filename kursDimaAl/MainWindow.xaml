<Window x:Class="kursDimaAl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursDimaAl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#363F2E">
        <Border Background="#979E78" Width="400" Height="300" CornerRadius="50">
            <StackPanel >
                <TextBlock Height="33" Width="176" Foreground="#FDECAF" FontSize="25">Выберите дату</TextBlock>
                <ComboBox Height="34" Width="190" Background="#979E78" x:Name="date"></ComboBox>
                <TextBlock Height="35" Width="184" Foreground="#FDECAF" FontSize="25">Выберите место</TextBlock>
                <ComboBox  Background="#979E78" x:Name="mesto" Width="190" Height="31"></ComboBox>
                <Button Click="Button_Click" Margin="0 15 0 0" Background="#E1B588" Width="128" Height="26">Зарезевировать</Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
